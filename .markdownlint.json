{
  "extends": "markdownlint/style/relaxed",
  "globs": ["**/*.md", "!node_modules/**", "!.git/**"],
  "MD013": {
    "line_length": 120,
    "heading_line_length": 120,
    "header_line_length": 120,
    "code_block_line_length": 120,
    "code_blocks": true,
    "headers": true,
    "headers_only": false,
    "stern": false,
    "tables": false
  },
  "MD024": {
    "siblings_only": true
  },
  "MD029": {
    "style": "one"
  },
  "MD040": true
}
