# mise configuration file
# Comprehensive tool setup for development
# Documentation: https://mise.jdx.dev/

[tools]
# ============================================================================
# Languages & Runtimes (Install these first for npm/pip packages to work)
# ============================================================================
node = "24.10.0"      # Node.js (required for npm packages)
python = "3.12.11"    # Python
# go = "latest"         # Go
# rust = "latest"       # Rust

# ============================================================================
# Cloud & Infrastructure
# ============================================================================
aws-cli = "2.32.3"
aws-sam-cli = "1.150.1"
# iam-policy-json-to-terraform = "latest"
# gcloud = "latest"
# jules = "latest"
terraform = "1.14.0"
terragrunt = "0.93.12"
opentofu = "1.10.7"
infracost = "latest"
driftctl = "latest"
# localstack = "latest"

# ============================================================================
# AI & Coding Assistants
# ============================================================================
claude = "latest"
gemini = "latest"
# codex = "latest"
"pipx:aider-chat" = "latest"
"npm:opencode-ai" = "latest"

# ============================================================================
# Git & Version Control
# ============================================================================
lazygit = "latest"
delta = "latest"
gh = "latest"         # GitHub CLI
glab = "latest"       # GitLab CLI
gitconfig = "latest"
gh = "latest"
# glab = "latest"

# ============================================================================
# Modern Unix Tools (CLI replacements)
# ============================================================================
bat = "latest"        # Cat with syntax highlighting
eza = "latest"        # Modern ls
fd = "latest"         # Fast find
ripgrep = "latest"    # Fast grep (rg)
fzf = "latest"        # Fuzzy finder
jq = "latest"         # JSON processor
yq = "latest"         # YAML processor
glow = "latest"       # Markdown renderer

# ============================================================================
# Linters & Formatters
# ============================================================================
shellcheck = "latest"
shfmt = "latest"
yamlfmt = "latest"
yamllint = "latest"
# lefthook = "latest"
tflint = "latest"
# terraform-ls = "latest"

# ============================================================================
# Security
# ============================================================================
gitleaks = "latest"
# terrascan = "latest"
# tfsec = "latest"
# checkov = "latest"

# ============================================================================
# Docker & Containers
# ============================================================================
docker-cli = "latest"
docker-compose = "latest"
lazydocker = "latest"
# kubectl = "latest"
# argocd = "latest"
# podman = "latest"

# ============================================================================
# Package Managers
# ============================================================================
yarn = "latest"
# npm comes with node, no need to install separately
uv = "latest"
pipx = "latest"

# ============================================================================
# Misc CLI Tools
# ============================================================================
tlrc = "latest"
hcl2json = "latest"
direnv = "latest"
# lazyssh = "latest"
# 1password = "latest"
# bitwarden = "latest"
# terraform-docs = "latest"

# ============================================================================
# Project-Specific npm Packages (requires node to be installed first)
# ============================================================================
"npm:@mirohq/cloud-data-import" = "latest"
"npm:@shopify/cli" = "latest"

# ============================================================================
# Settings
# ============================================================================
[settings]
# Use all CPU cores for parallel downloads
jobs = 4

# Verbose output for debugging (uncomment if needed)
# verbose = true

# Legacy version files (.node-version, .python-version, etc.)
# mise can read these files automatically
legacy_version_file = true

# Automatically install missing tools when entering a directory
# auto_install = false

# ============================================================================
# Notes
# ============================================================================
# - Install order matters: node must be installed before npm: packages
# - Run 'mise install' to install all tools
# - Run 'mise upgrade' to upgrade all tools
# - Run 'mise list' to see installed versions
# - Per-project: create .mise.toml or .tool-versions in project directory


