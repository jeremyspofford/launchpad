# SSH Configuration for Jeremy Spofford
# Managed by dotfiles - stow will symlink this to ~/.ssh/config

# Default settings for all hosts
Host *
    AddKeysToAgent yes
    UseKeychain yes
    ServerAliveInterval 60
    ServerAliveCountMax 10
    Compression yes

# Personal
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_personal
    AddKeysToAgent yes
    UseKeychain yes

# Clients
Host client
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_ed25519_client
    IdentitiesOnly yes
    AddKeysToAgent yes
    UseKeychain yes

# Work
Host work
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_ed25519_work
    IdentitiesOnly yes
    AddKeysToAgent yes
    UseKeychain yes

