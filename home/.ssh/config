# SSH Configuration for Jeremy Spofford
# Managed by dotfiles - stow will symlink this to ~/.ssh/config

# Default settings for all hosts
Host *
    AddKeysToAgent yes
    UseKeychain yes
    IdentitiesOnly yes
    ServerAliveInterval 60
    ServerAliveCountMax 10
    Compression yes

# Personal GitHub (default)
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_personal
    AddKeysToAgent yes
    UseKeychain yes

# Personal GitLab
Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_ed25519_personal
    AddKeysToAgent yes
    UseKeychain yes

# Work GitLab (VividCloud)
Host gitlab-vividcloud
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_ed25519_vividcloud
    AddKeysToAgent yes
    UseKeychain yes

