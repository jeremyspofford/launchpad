alias c='clawdbot'
alias moltbot="clawdbot"

# ============================================================================ #
# Shell Aliases
# ============================================================================ #

# Convenience aliases for dotfiles scripts
alias sync="sync-secrets"  # Short alias for sync-secrets
alias load="load-secrets"  # Short alias for load-secrets

# File listing aliases
alias ll='ls -AlF'
alias la='ls -A'
alias l='ls -CF'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')\"'

# ============================================================================ #
# Development Tool Aliases
# ============================================================================ #

# Ansible
alias ap="ansible-playbook"

# AWS
alias awslocal="aws --endpoint-url=http://localhost:4566 --profile localstack"

# Docker
alias dc="docker-compose"
alias dps="docker ps"
alias dstart="docker start"
alias dstop="docker stop"

# Open WebUI (Ollama chat interface)
alias openwebui='docker start open-webui 2>/dev/null; xdg-open http://localhost:3000 2>/dev/null || open http://localhost:3000'
alias webui='openwebui'

# Terraform
alias tf="terraform"
alias tfp="terraform plan"
alias tfa="terraform apply"

# Terragrunt
alias tg="terragrunt"

# Python
alias python="python3"
alias pip="pip3"

# ============================================================================ #
# Neovim Configuration Switchers
# ============================================================================ #

alias craftzdog="NVIM_APPNAME=craftzdog/dotfiles-public/.config/nvim nvim"
alias starter="NVIM_APPNAME=starter nvim"
alias xero="NVIM_APPNAME=xero/dotfiles/neovim/.config/nvim nvim"
alias kickstart='NVIM_APPNAME="nvim-kickstart" nvim'
alias nvchad="NVIM_APPNAME=nvchad nvim"

# ============================================================================ #
# Platform-Specific Aliases
# ============================================================================ #

if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    alias pbpaste="xclip -selection clipboard -o"
    alias pbcopy="xclip -selection clipboard"
elif [[ "$OSTYPE" == "darwin"* ]]; then
    # pbpaste/pbcopy already available on macOS
    alias to-obsidian="cd ~/Documents/Obsidian_vault/"
fi

# ============================================================================ #
# Local Aliases (machine-specific, not tracked)
# ============================================================================ #

[[ -f ~/.aliases.local ]] && source ~/.aliases.local
