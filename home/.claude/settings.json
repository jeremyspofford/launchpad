{
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "if [[ -n \"$SLACK_WEBHOOK_URL\" ]]; then curl -s -X POST -H 'Content-type: application/json' --data '{\"text\":\"ü§ñ *Claude Code*: Awaiting your input\"}' \"$SLACK_WEBHOOK_URL\"; fi; if [[ -n \"$TEAMS_WEBHOOK_URL\" ]]; then curl -s -X POST -H 'Content-Type: application/json' -d '{\"title\": \"Claude Code\", \"text\": \"ü§ñ Awaiting your input\"}' \"$TEAMS_WEBHOOK_URL\"; fi; if [[ \"$OSTYPE\" == \"darwin\"* ]]; then osascript -e 'display notification \"Awaiting your input\" with title \"Claude Code\" sound name \"Ping\"' 2\u003e/dev/null; elif grep -qi microsoft /proc/version 2\u003e/dev/null; then powershell.exe -Command \"Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('Awaiting your input', 'Claude Code', 0, [System.Windows.Forms.MessageBoxIcon]::Information)\" 2\u003e/dev/null; elif command -v notify-send \u0026\u003e/dev/null; then notify-send 'Claude Code' 'Awaiting your input'; fi",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "${DOTFILES_DIR:-$HOME/workspace/dotfiles}/scripts/doc-update-hook.sh '{{filePath}}'",
            "timeout": 3,
            "type": "command"
          },
          {
            "command": "~/.claude/scripts/markdown-lint-hook.sh '{{filePath}}'",
            "timeout": 5,
            "type": "command"
          }
        ],
        "matcher": "Write"
      },
      {
        "hooks": [
          {
            "command": "${DOTFILES_DIR:-$HOME/workspace/dotfiles}/scripts/doc-update-hook.sh '{{filePath}}'",
            "timeout": 3,
            "type": "command"
          },
          {
            "command": "~/.claude/scripts/markdown-lint-hook.sh '{{filePath}}'",
            "timeout": 5,
            "type": "command"
          }
        ],
        "matcher": "Edit"
      },
      {
        "hooks": [
          {
            "command": "${DOTFILES_DIR:-$HOME/workspace/dotfiles}/scripts/doc-update-hook.sh '{{filePath}}'",
            "timeout": 3,
            "type": "command"
          },
          {
            "command": "~/.claude/scripts/markdown-lint-hook.sh '{{filePath}}'",
            "timeout": 5,
            "type": "command"
          }
        ],
        "matcher": "MultiEdit"
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "command": "bd prime",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "echo 'Memory operation initiated' \u003e\u003e ~/mcp-operations.log",
            "type": "command"
          }
        ],
        "matcher": "mcp__memory__.*"
      },
      {
        "hooks": [
          {
            "command": "~/.claude/scripts/validate-routing.sh '{{toolName}}' '{{filePath}}'",
            "type": "command"
          },
          {
            "command": "~/.claude/scripts/log-routing-decision.sh 'DIRECT' 'tool-use' '{{toolName}}' '{{filePath}}'",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "echo '\n‚ö†Ô∏è  ROUTING POLICY REMINDER ‚ö†Ô∏è\n\nBefore responding, check the decision tree in CLAUDE.md:\n1. Simple info query? ‚Üí Handle directly\n2. Trivial command? ‚Üí Handle directly  \n3. User named specific agent? ‚Üí Use that agent\n4. Project planning? ‚Üí Use project-manager\n5. ANYTHING ELSE? ‚Üí USE ORCHESTRATOR-AGENT\n\n‚ö†Ô∏è  If doing technical work directly, you should have used orchestrator!\n' \u003e\u00262",
            "type": "command"
          }
        ],
        "matcher": ""
      },
      {
        "hooks": [
          {
            "command": "bd prime",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "~/.claude/scripts/log-routing-decision.sh 'SESSION_END' 'session-complete' 'various'",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash(ansible-doc:*)",
      "Bash(cat:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(npm run build:*)",
      "Bash(brew list:*)",
      "Read(//Users/jeremyspofford/.claude/**)",
      "Read(//opt/homebrew/lib/node_modules/@anthropic-ai/claude-code/**)",
      "Read(//Users/jeremyspofford/.local/lib/node_modules/@anthropic-ai/claude-code/**)",
      "Read(//Users/jeremyspofford/**)",
      "Bash(osascript:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(npm config:*)",
      "Bash(claude --version)",
      "Edit(*.md)",
      "Edit(*.json)",
      "Edit(//Users/jeremyspofford/.claude/**)",
      "Write(*.md)",
      "Write(*.json)",
      "Write(//Users/jeremyspofford/.claude/**)",
      "Write(//Users/jeremyspofford/.cursor/**)",
      "MultiEdit(*)",
      "Find",
      "mcp__n8n-mcp__n8n_health_check"
    ],
    "ask": [],
    "deny": []
  },
  "statusLine": {
    "command": "~/.claude/statusline-command.sh",
    "type": "command"
  }
}