{
  "permissions": {
    "allow": [
      "Bash(ansible-doc:*)",
      "Bash(cat:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(npm run build:*)",
      "Bash(brew list:*)",
      "Read(//Users/jeremyspofford/.claude/**)",
      "Bash(osascript:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(npm config:*)",
      "Bash(claude --version)",
      "Edit(*.md)",
      "Find",
      "Read(//opt/homebrew/lib/node_modules/@anthropic-ai/claude-code/**)",
      "Read(//Users/jeremyspofford/.local/lib/node_modules/@anthropic-ai/claude-code/**)",
      "Read(//Users/jeremyspofford/**)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ -n \"$SLACK_WEBHOOK_URL\" ]]; then curl -s -X POST -H 'Content-type: application/json' --data '{\"text\":\"ðŸ¤– *Claude Code*: Awaiting your input\"}' \"$SLACK_WEBHOOK_URL\"; fi; if [[ -n \"$TEAMS_WEBHOOK_URL\" ]]; then curl -s -X POST -H 'Content-Type: application/json' -d '{\"title\": \"Claude Code\", \"text\": \"ðŸ¤– Awaiting your input\"}' \"$TEAMS_WEBHOOK_URL\"; fi; if [[ \"$OSTYPE\" == \"darwin\"* ]]; then osascript -e 'display notification \"Awaiting your input\" with title \"Claude Code\" sound name \"Ping\"' 2>/dev/null; elif grep -qi microsoft /proc/version 2>/dev/null; then powershell.exe -Command \"Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('Awaiting your input', 'Claude Code', 0, [System.Windows.Forms.MessageBoxIcon]::Information)\" 2>/dev/null; elif command -v notify-send &>/dev/null; then notify-send 'Claude Code' 'Awaiting your input'; fi"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__memory__.*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Memory operation initiated' >> ~/mcp-operations.log"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "${DOTFILES_DIR:-$HOME/workspace/dotfiles}/scripts/doc-update-hook.sh '{{filePath}}'",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${DOTFILES_DIR:-$HOME/workspace/dotfiles}/scripts/doc-update-hook.sh '{{filePath}}'",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${DOTFILES_DIR:-$HOME/workspace/dotfiles}/scripts/doc-update-hook.sh '{{filePath}}'",
            "timeout": 3
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": false
}
