{
  "permissions": {
    "allow": [
      "Bash(ansible-doc:*)",
      "Bash(cat:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Edit(*.md)",
      "Find"
    ],
    "deny": [],
    "ask": []
  },
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[01;32m%s@%s\\033[00m: \\033[01;34m%s\\033[00m' \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\""
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "${DOTFILES_DIR:-$HOME/workspace/dotfiles}/scripts/doc-update-hook.sh '{{filePath}}'",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${DOTFILES_DIR:-$HOME/workspace/dotfiles}/scripts/doc-update-hook.sh '{{filePath}}'",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${DOTFILES_DIR:-$HOME/workspace/dotfiles}/scripts/doc-update-hook.sh '{{filePath}}'",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
