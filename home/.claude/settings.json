{
  "permissions": {
    "allow": [
      "Bash(ansible-doc:*)",
      "Bash(cat:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)"
    ],
    "deny": [],
    "ask": []
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf '\\033[01;32m%s@%s\\033[00m: \\033[01;34m%s\\033[00m' \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\""
  }
}