# ============================================================================ #
# Git Configuration
# ============================================================================ #

# Include identity configuration (not tracked in repo)
[include]
    path = ~/.config/git/identity.gitconfig

# ============================================================================ #
# Core Settings
# ============================================================================ #

[core]
    editor = nvim
    excludesfile = ~/.gitignore
    autocrlf = input
    pager = delta

[init]
    defaultBranch = main

# ============================================================================ #
# Push/Pull/Fetch Settings
# ============================================================================ #

[push]
    default = current
    autoSetupRemote = true

[pull]
    rebase = true

[fetch]
    prune = true

# ============================================================================ #
# Diff and Merge
# ============================================================================ #

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

# ============================================================================ #
# Aliases
# ============================================================================ #

[alias]
    # Basic shortcuts
    st = status -sb
    co = checkout
    ci = commit
    br = branch
    df = diff
    lg = log --oneline --graph --decorate

    # Advanced shortcuts
    unstage = reset HEAD --
    last = log -1 HEAD
    amend = commit --amend --no-edit
    undo = reset --soft HEAD~1

    # Branch management
    branches = branch -a
    remotes = remote -v
    cleanup = !git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d

    # Stash shortcuts
    stashes = stash list
    save = stash save
    pop = stash pop

    # Log variations
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    today = log --since=midnight --oneline
    recent = log --oneline -10

    # Sync shortcuts
    sync = !git fetch --all && git pull
    pushf = push --force-with-lease

# ============================================================================ #
# Colors
# ============================================================================ #

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

