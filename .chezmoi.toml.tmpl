{{- $name := promptStringOnce . "name" "Your full name" -}}
{{- $email := promptStringOnce . "email" "Your email address" -}}
{{- $github_username := promptStringOnce . "github_username" "Your GitHub username" -}}
{{- $work_email := promptStringOnce . "work_email" "Your work email (leave blank if none)" "" -}}
{{- $machine_type := promptChoiceOnce . "machine_type" "Machine type" (list "personal" "work" "shared") -}}

[data]
    name = {{ $name | quote }}
    email = {{ $email | quote }}
    github_username = {{ $github_username | quote }}
    work_email = {{ $work_email | quote }}
    machine_type = {{ $machine_type | quote }}

[git]
    autoCommit = true
    autoPush = true

[edit]
    command = "nvim"

[diff]
    pager = "bat"

# Use the home/ subdirectory as source
[sourceDir]
    path = "{{ .chezmoi.sourceDir }}/home"